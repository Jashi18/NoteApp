<h1>Note Details</h1>

<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 300px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text"><strong>Phone:</strong> @Model.Phone</p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this note?');">
                <i class="fas fa-trash"></i> Delete
            </button>
        </form>
    </div>
</div>